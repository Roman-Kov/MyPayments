<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rojer_ko.mypayments">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MyPaymentsApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_payment_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_payment_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyPayments"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>